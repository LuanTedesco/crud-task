<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <%= form_with(model: @task, class: "row g-3") do |form| %>
        <div class="col-12">
          <%= form.label :title, class: "form-label small" %>
          <%= form.text_field :title, class: "form-control form-control-sm", required: true, disabled: true %>
        </div>
        <div class="col-12">
          <%= form.label :description, class: "form-label small" %>
          <%= form.text_area :description, class: "form-control form-control-sm", required: true, disabled: true %>
        </div>
        <div class="col-12">
          <%= form.label :finished, class: "form-label small" %>
          <%= form.select :finished, [['Not Finished', false], ['Finished', true]], {}, class: "form-control form-control-sm w-100", disabled: true %>
        </div>
        <div class="col-4">
          <%= link_to "Back to Tasks", tasks_path, method: :get, class: "btn btn-outline-secondary btn-sm w-100 me-2" %>
        </div>
        <div class="col-4">
          <%= link_to "Edit", edit_task_path(@task), method: :get, class: "btn btn-outline-warning btn-sm w-100 me-2" %>
        </div>
        <div class="col-4">
          <%= button_to "Delete", @task, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm w-100 me-2" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
