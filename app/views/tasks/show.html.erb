<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="mt-4"></div>
      <%= render @task %>
      <div class="mt-4 d-flex">
        <%= link_to "Back to Tasks", tasks_path, method: :get, class: "btn btn-outline-secondary btn-sm me-2" %>
        <%= link_to "Edit", edit_task_path(@task), method: :get, class: "btn btn-outline-warning btn-sm me-2" %>
        <%= button_to "Delete", @task, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm me-2" %>
      </div>
    </div>
  </div>
</div>
